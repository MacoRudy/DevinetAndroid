<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BABABA"
    tools:context=".activity.AccueilActivity">

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="51dp"
        android:onClick="onClickQuit"
        android:text="Quitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_resultat" />

    <Button
        android:id="@+id/btn_ajouter"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="180dp"
        android:onClick="onClickAjouter"
        android:text="Proposer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_jouer" />

    <Button
        android:id="@+id/btn_jouer"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="158dp"
        android:onClick="onClickJouer"
        android:text="Jouer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_resultat"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="51dp"
        android:onClick="onClickResultat"
        android:text="Mes rÃ©sultats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>