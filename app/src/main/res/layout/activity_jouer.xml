<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BABABA"
    tools:context=".activity.JouerActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="250dp"
        android:layout_height="148dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/box"
        android:includeFontPadding="false"
        android:onClick="onClickNiveau1"
        android:padding="10dp"
        android:text="Niveau 1 - 4 lettres"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="250dp"
        android:layout_height="148dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/box2"
        android:onClick="onClickNiveau2"
        android:padding="10dp"
        android:text="Niveau 2 - 5 lettres"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="250dp"
        android:layout_height="148dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/box3"
        android:onClick="onClickNiveau3"
        android:padding="10dp"
        android:text="Niveau 3 - 6 lettres"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ProgressBar
        android:id="@+id/pb_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="116dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="308dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="500dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="84dp"
        android:text="Progression :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="276dp"
        android:text="Progression :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="468dp"
        android:text="Progression :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNiv1"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="140dp"
        android:onClick="onClickResetNiv1"
        android:text="Réinitialiser"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNiv2"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="528dp"
        android:onClick="onClickResetNiv2"
        android:text="Réinitialiser"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNiv3"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="332dp"
        android:onClick="onClickResetNiv3"
        android:text="Réinitialiser"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>